{
	"name": "@nc/typegen",
	"version": "0.1.0",
	"license": "MIT",
	"tasks": {
		"dev": "deno test --watch src/mod.ts"
	},
	"publish": {
		"include": [
			"src/",
			"!src/**/*_test.ts",
			"README.md",
			"LICENSE"
		]
	},
	"exports": {
		".": "./src/mod.ts",
		"./composite": "./src/composite.ts",
		"./strings": "./src/strings.ts",
		"./types": "./src/types.ts"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@std/testing": "jsr:@std/testing@^1"
	},
	"fmt": {
		"include": [
			"src/"
		],
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true,
		"indentWidth": 4
	},
	"lint": {
		"include": [
			"src/"
		]
	}
}
